        const imgLink =
            "https://raw.githubusercontent.com/kalenwallin/portfolio.v1/gpages/img/";

        const recent = [
            "Amazon Web Services",
            "Astro",
            "Blazor",
            "C#",
            "Django",
            "Figma",
            "GitHub",
            "HTML & CSS",
            "JavaScript",
            "Microsoft Teams/Office",
            "Netlify",
            "NodeJS",
            "Notion",
            "Python",
            "Unity",
            "Vercel",
            "Visual Studio",
            "VS Code",
        ];
        const whileAgo = [
            "C",
            "C++",
            "CircleCI",
            "ExpressJS",
            "GDScript",
            "Godot",
            "PythonAnywhere",
        ];
        const longtimeago = [
            "ANTLR",
            "ASP.NET Core",
            "Dart",
            "Eclipse",
            "Flutter",
            "Haskell",
            "Java",
            "MySQL Workbench",
            "Prolog",
            "SQL",
            "Xamarin",
        ];

        function generateSkillsList(skills: any[]) {
            return skills
                .map((skill) => `<p class="skills">${skill}</p>`)
                .join("");
        }

        document.addEventListener("DOMContentLoaded", () => {
            const recentSkillsList = document.getElementById("recent-skills");
            const whileAgoSkillsList =
                document.getElementById("whileago-skills");
            const longtimeagoSkillsList =
                document.getElementById("longtimeago-skills");

            if (recentSkillsList) {
                recentSkillsList.innerHTML = generateSkillsList(recent);
            }

            if (whileAgoSkillsList) {
                whileAgoSkillsList.innerHTML = generateSkillsList(whileAgo);
            }

            if (longtimeagoSkillsList) {
                longtimeagoSkillsList.innerHTML =
                    generateSkillsList(longtimeago);
            }
        });
    </script>
</Base>
